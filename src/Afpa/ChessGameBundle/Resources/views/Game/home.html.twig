
{% extends "AfpaChessGameBundle::layout.html.twig" %}

{% block title %}AfpaChessGameBundle:Game:home{% endblock %}

{% block body %}
    <h1>Welcome at the Game:home page</h1>

    <style>
        table {text-align: center;}
        td {min-width:64px;height:64px;}
        .td_light {background-color:white;}
        .td_dark {background-color:grey;}
    </style>

    <table width="100px" height="100px" border="1px">
        <thead>

        </thead>
        <tbody>
            {% for x in (0..board|length-1) %}
                <tr>
                    {% for y in (0..board|length-1) %}
                        <td class="td_{{ ((x+y) % 2 == 0) ? 'light' : 'dark' }}" background-color="#fcfcfc">
                            {% if board[x][y] %}
                                <img src="{{ asset('bundles/afpachessgame/images/'~ theme ~'/' ~ board[x][y]) }}" />
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}