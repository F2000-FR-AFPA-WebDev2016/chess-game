
{% extends "AfpaChessGameBundle::layout.html.twig" %}

{% block title %}AfpaChessGameBundle:Game:home{% endblock %}

{% block body %}
    <h1>Welcome at the Game:home page</h1>
    <h2 id="new_partie">
        <a href="#">Nouvelle partie</a>
    </h2>

    <table id="board" >


        <tbody>
            {% for x in (0..board|length-1) %}
                <tr>
                    {% for y in (0..board|length-1) %}
                        <td class="td_{{ ((x+y) % 2 == 0) ? 'light' : 'dark' }}">
                            {% if board[x][y] %}
                                <img src="{{ asset('bundles/afpachessgame/images/'~ theme ~'/' ~ board[x][y]) }}" />
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}